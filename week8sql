--EX7
SELECT * FROM Customers 
LEFT JOIN Orders ON Customers.Id = Orders.CustomerId;

--EX8
SELECT Name, Details, StreetName, StreetNumber, City FROM Customers 
LEFT JOIN Orders ON Customers.Id = Orders.CustomerId
LEFT JOIN Addresses ON AddressId=Addresses.Id;